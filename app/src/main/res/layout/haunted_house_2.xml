<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="wrap_content"
        android:layout_height="415dp"
        app:layout_constraintTop_toBottomOf="@+id/room_name"
        app:srcCompat="@drawable/haunted_house"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/room_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Description"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_image" />

    <Button
        android:id="@+id/entry_hallway"
        android:layout_width="107dp"
        android:layout_height="81dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_image"
        app:layout_constraintTop_toBottomOf="@+id/fourier"
        tools:layout_editor_absoluteX="146dp" />

    <Button
        android:id="@+id/garage"
        android:layout_width="107dp"
        android:layout_height="81dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/entry_hallway"
        app:layout_constraintStart_toEndOf="@+id/entry_hallway"
        app:layout_constraintTop_toBottomOf="@+id/fourier" />

    <Button
        android:id="@+id/living_room"
        android:layout_width="108dp"
        android:layout_height="115dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/fourier"
        app:layout_constraintEnd_toEndOf="@+id/garage"
        app:layout_constraintStart_toEndOf="@+id/fourier"
        app:layout_constraintTop_toBottomOf="@+id/backyard" />

    <Button
        android:id="@+id/fourier"
        android:layout_width="107dp"
        android:layout_height="116dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/kitchen"
        app:layout_constraintStart_toEndOf="@+id/bunkroom"
        app:layout_constraintTop_toTopOf="@+id/kitchen"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/hallway"
        android:layout_width="54dp"
        android:layout_height="120dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/backyard"
        app:layout_constraintEnd_toEndOf="@+id/master_bedroom"
        app:layout_constraintStart_toEndOf="@+id/nursery"
        app:layout_constraintTop_toTopOf="@+id/nursery" />

    <Button
        android:id="@+id/kitchen"
        android:layout_width="105dp"
        android:layout_height="114dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintStart_toStartOf="@+id/bunkroom"
        app:layout_constraintTop_toBottomOf="@+id/bunkroom" />

    <Button
        android:id="@+id/nursery"
        android:layout_width="105dp"
        android:layout_height="67dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintStart_toStartOf="@+id/master_bedroom"
        app:layout_constraintTop_toBottomOf="@+id/master_bedroom" />

    <Button
        android:id="@+id/master_bedroom"
        android:layout_width="159dp"
        android:layout_height="75dp"
        android:backgroundTint="#80D32626"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="71dp" />

    <Button
        android:id="@+id/backyard"
        android:layout_width="166dp"
        android:layout_height="195dp"
        android:backgroundTint="#809AB61D"
        app:layout_constraintEnd_toEndOf="@+id/living_room"
        app:layout_constraintStart_toEndOf="@+id/hallway"
        app:layout_constraintTop_toTopOf="@+id/master_bedroom" />

    <Button
        android:id="@+id/bunkroom"
        android:layout_width="106dp"
        android:layout_height="62dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/hallway"
        app:layout_constraintEnd_toEndOf="@+id/nursery"
        app:layout_constraintStart_toStartOf="@+id/nursery" />

    <Button
        android:id="@+id/pantry"
        android:layout_width="37dp"
        android:layout_height="64dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintEnd_toStartOf="@+id/kitchen"
        app:layout_constraintStart_toStartOf="@+id/iv_main_image"
        app:layout_constraintTop_toTopOf="@+id/kitchen" />
</androidx.constraintlayout.widget.ConstraintLayout>