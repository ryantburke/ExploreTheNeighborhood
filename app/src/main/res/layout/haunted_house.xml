<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/haunted_house_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="343dp"
        android:layout_height="346dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/haunted_house" />

    <ImageView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/entry_hallway"
        app:layout_constraintEnd_toEndOf="@+id/entry_hallway"
        app:layout_constraintStart_toStartOf="@+id/entry_hallway"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline6"
        app:srcCompat="@drawable/person_foreground" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textSize="36dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/room_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Description"
        android:textSize="24dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_room_image" />


    <Button
        android:id="@+id/entry_hallway"
        android:layout_width="88dp"
        android:layout_height="62dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline4"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline2"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline6" />

    <Button
        android:id="@+id/garage"
        android:layout_width="88dp"
        android:layout_height="63dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline5"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline4"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline6" />

    <Button
        android:id="@+id/living_room"
        android:layout_width="86dp"
        android:layout_height="99dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline5"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline4"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <Button
        android:id="@+id/fourier"
        android:layout_width="89dp"
        android:layout_height="95dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline4"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline2"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <Button
        android:id="@+id/hallway"
        android:layout_width="50dp"
        android:layout_height="94dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline4"
        app:layout_constraintEnd_toEndOf="@+id/master_bedroom"
        app:layout_constraintStart_toEndOf="@+id/nursery"
        app:layout_constraintTop_toTopOf="@+id/nursery" />

    <Button
        android:id="@+id/kitchen"
        android:layout_width="94dp"
        android:layout_height="97dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline2"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <Button
        android:id="@+id/nursery"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline3"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline2"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline2" />

    <Button
        android:id="@+id/master_bedroom"
        android:layout_width="136dp"
        android:layout_height="62dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline2"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline3"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline1" />

    <Button
        android:id="@+id/backyard"
        android:layout_width="134dp"
        android:layout_height="152dp"
        android:backgroundTint="#809AB61D"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline4"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline5"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline3"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline1" />

    <Button
        android:id="@+id/bunkroom"
        android:layout_width="89dp"
        android:layout_height="52dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline4"
        app:layout_constraintEnd_toEndOf="@+id/nursery"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline3" />

    <Button
        android:id="@+id/pantry"
        android:layout_width="26dp"
        android:layout_height="54dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline5"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline1"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="328dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="241dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="190dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="141dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="61dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="42dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="102dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="148dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="193dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="243dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="285dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="450dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-1dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="361dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <ImageView
        android:id="@+id/iv_room_image"
        android:layout_width="312dp"
        android:layout_height="289dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_name"
        app:srcCompat="@drawable/houseexplore" />

</androidx.constraintlayout.widget.ConstraintLayout>