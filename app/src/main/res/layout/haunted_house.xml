<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/haunted_house_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_main_image"
        android:layout_width="wrap_content"
        android:layout_height="415dp"
        app:layout_constraintTop_toBottomOf="@+id/room_name"
        app:srcCompat="@drawable/haunted_house"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/person_foreground"
         />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textSize="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/room_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Description"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_main_image" />


    <Button
        android:id="@+id/entry_hallway"
        android:layout_width="107dp"
        android:layout_height="81dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/iv_main_image"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline4"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline2"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline6" />

    <Button
        android:id="@+id/garage"
        android:layout_width="107dp"
        android:layout_height="81dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline7"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline5"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline4"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline6" />

    <Button
        android:id="@+id/living_room"
        android:layout_width="108dp"
        android:layout_height="115dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline5"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline4"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <Button
        android:id="@+id/fourier"
        android:layout_width="107dp"
        android:layout_height="116dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline4"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline2"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <Button
        android:id="@+id/hallway"
        android:layout_width="54dp"
        android:layout_height="120dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toBottomOf="@+id/backyard"
        app:layout_constraintEnd_toEndOf="@+id/master_bedroom"
        app:layout_constraintStart_toEndOf="@+id/nursery"
        app:layout_constraintTop_toTopOf="@+id/nursery" />

    <Button
        android:id="@+id/kitchen"
        android:layout_width="105dp"
        android:layout_height="114dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline6"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline2"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <Button
        android:id="@+id/nursery"
        android:layout_width="105dp"
        android:layout_height="67dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline3"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline2"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline2" />

    <Button
        android:id="@+id/master_bedroom"
        android:layout_width="159dp"
        android:layout_height="75dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline2"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline3"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline1"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline1" />

    <Button
        android:id="@+id/backyard"
        android:layout_width="166dp"
        android:layout_height="195dp"
        android:backgroundTint="#809AB61D"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline4"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline5"
        app:layout_constraintStart_toStartOf="@+id/vert_guideline3"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline1" />

    <Button
        android:id="@+id/bunkroom"
        android:layout_width="106dp"
        android:layout_height="62dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline4"
        app:layout_constraintEnd_toEndOf="@+id/nursery"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline3" />

    <Button
        android:id="@+id/pantry"
        android:layout_width="37dp"
        android:layout_height="64dp"
        android:backgroundTint="#80D32626"
        app:layout_constraintBottom_toTopOf="@+id/hor_guideline5"
        app:layout_constraintEnd_toStartOf="@+id/vert_guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/hor_guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="35dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="146dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="217dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="159dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vert_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="51dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="75dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="146dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="204dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="264dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="314dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="365dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hor_guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="450dp" />

</androidx.constraintlayout.widget.ConstraintLayout>